<!DOCTYPE html>
<html>

<head>
	<title>Mis amigos - FaceBluff</title>
	<link rel="stylesheet" type="text/css" href="css/friends.css">
	<link rel="shortcut icon" href="../img/icon.png">
</head>

<body>
	<%- include('./header'); %>
	<h1 class="tituloAmigos">Amigos</h1>
	<div id="container_general">
		<%if(lista_solicitudes[0]){%>
		<div id="solucitudes" class="contenedor_centrado">
			<div>
				<h1>Solicitudes de amistad:</h1>
			</div>

			<div id="las_solicitudes">
				<% lista_solicitudes.forEach(solicitud => {  %>
				<div class="una_solicitud">
					<div>
						<% if(solicitud.id_usuario_A){%>
						<img class="imagen_pequenia" src="/imagen/<%= solicitud.id_usuario_A %>">
						<%}else{%>
						<img class="imagen_pequenia" src="../img/userImg.png" alt="Imagen de usuario.">
						<%}%>
					</div>
					<p id="nombreSolicitud">
						<%=solicitud.nombre%>
					</p>



					<form method="POST" action="/aceptarSolicitudAmistad">
						<input type="hidden" name="id_amigo" value="<%=solicitud.id_usuario_A%>">
						<input class="botonAceptar" value="Añadir" type="submit">
					</form>
					<form method="POST" action="/rechazarSolicitudAmistad">
						<input type="hidden" name="id_amigo" value="<%=solicitud.id_usuario_A%> ">
						<input class="botonRechazar" value="Rechazar" type="submit">
					</form>


				</div>
				<%})%>
			</div>


		</div>
		<%}%>
		<div id="busqueda" class="contenedor_centrado">
			<div>
				<h1>Búsqueda de usuarios:</h1>
			</div>
			<div id="la_busqueda">
				<form action="/buscarNombre" method="GET">
					<label>Buscar por nombre: </label>
					<input type="search" name="nombre" class="campoBuscar">
					<input type="submit" value="Buscar" class="botonBuscar">
				</form>
			</div>

		</div>
		<%if(lista_amigos[0]){%>
		<div id="amigos" class="contenedor_centrado">
			<div>
				<h1>Mis amigos:</h1>
			</div>

			<div id="los_amigos">

				<% lista_amigos.forEach(amigo => { %>
				<div class="un_amigo">
					<div>
						<% if(amigo.imagen){%>
						<img class="imagen_pequenia" src="/imagen/<%= amigo.id %>">
						<%}else{%>
						<img class="imagen_pequenia" src="../img/userImg.png" alt="Imagen de usuario.">
						<%}%>
					</div>
					<p>
						<%=amigo.nombre%>
					</p>
				</div>
				<%})%>

			</div>


		</div>
		<%}%>

	</div>

</body>

</html>