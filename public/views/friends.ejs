<!DOCTYPE html>
<html>

<head>
	<title>Mis amigos</title>
	<link rel="stylesheet" type="text/css" href="friends.css">
</head>

<body>

	<div id="container_general">

		<div id="solucitudes">
			<div class="titulo">
				<h1>Solicitudes de amistad</h1>
			</div>

			<div id="las_solicitudes">
				<% lista_solicitudes.forEach(solicitud => {  %>
				<div class="una_solicitud">
					<div class="imagen_pequenia"></div>
					<p>
						<%=solicitud.nombre%>
					</p>


					<div class="aceptarYrechazar">
						<form method="POST" action="/aceptarSolicitudAmistad">
							<input type="hidden" name="id_amigo" value="<%=solicitud.id_usuario_A%>" >
							<input value="AÃ±adir" type="submit">
						</form>
						<form method="POST" action="/rechazarSolicitudAmistad">
							<input type="hidden" name="id_amigo" value="<%=solicitud.id_usuario_A%> ">
							<input value="Rechazar" type="submit">
						</form>
					</div>

				</div>
				<%})%>
			</div>


		</div>

		<div id="busqueda">
			<div class="titulo">
				<h1>Busqueda de usuarios</h1>
			</div>
			<div id="la_busqueda">
				<form action="/buscarNombre" method="GET">
					<label>Buscar por nombre: </label>
					<input type="search" name="nombre">
					<input type="submit" value="Buscar">
				</form>
			</div>





		</div>

		<div id="amigos">
			<div class="titulo">
				<h1>Mis amigos</h1>
			</div>

			<div id="los_amigos">

				<% lista_amigos.forEach(amigo => { %>
				<div class="un_amigo">
					<div class="imagen_pequenia"></div>
					<p>
						<%=amigo.nombre%>
					</p>
				</div>
				<%})%>

			</div>


		</div>


	</div>

</body>

</html>