<link rel="stylesheet" type="text/css" href="css/header.css" media="screen">
<div id="cabecera">

    <div id="contenedorTitulo">
        <h1 class="titulo">FaceBluff</h1>
    </div>

    <div class="navbar">
        <ul class="navbarList">
            <%if(locals.currentUserId){%>
            <li><a class="navLink" href="/perfil">Perfil</a></li>
            <li><a class="navLink" href="/friends">Amigos</a></li>
            <li><a class="navLink" href="/preguntas">Preguntas</a></li>
            <li><a class="navLink" href="/desconectar">Desconectar</a></li>
            <li class="icon_puntos">
                <% if(locals.currentUserImage){%>
                <img class="perfilIcon" src="/imagen/<%= locals.currentUserId %>">
                <%}else{%>
                <img class="perfilIcon" src="../img/userImg.png" alt="Imagen de usuario.">
                <%}%>
                <p class="navLink" href="">
                    <%=locals.currentUserPoints%> pts</p>
            </li>
            <%}else{%>
            <li><a class="navLink" href="/login">Entrar</a></li>
            <li><a class="navLink" href="/registro">Nuevo Usuario</a></li>
            <%}%>
        </ul>
    </div>

</div>